                        {% if app.user.getRoles()[0]=="admin"  %}
                            <li class="has-dropdown">
                                <a href="#">Tableau de board</a>
                                <ul class="dropdown">
                                    <li><a href="{{ path('getAllUser')}}">Admin</a></li>
                                    <li><a href="{{ path('getdestination')}}">Destination</a></li>
                                </ul>
                            </li>
                        {% endif %}

                            <li><a href="{{ path('app_logout') }}">Logout</a></li>
                        {% else %}
                            <li><a href="{{ path('Register')}}">Sign up</a></li>
                            <li><a href="{{ path('Login')}}">Sign in</a></li>
                        {% endif %}
                            <li><a href="{{ path('contact')}}">Contact</a></li>

                    </ul>
                </div>
            </div>

        </div>
    </nav>
            <header id="gtco-header" class="gtco-cover gtco-cover-md"  style="background:url('{{  asset('images/bg.jpg')}}') ;background-size: cover;">

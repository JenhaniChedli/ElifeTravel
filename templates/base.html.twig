                            <a href="{{ path('index') }}">ElifeTravel</a>
                        {% endif %}
                    </div>
                </div>
                <div class="col-xs-8 text-right menu-1">
                    <ul>
                        <li><a href="{{ path('destination') }}">Destination</a></li>

